    <div id="login-box-container">
		<div id="center">
			<%= image_tag "Logo-small.png" %>
			<div id="login-box">
            <% form_for(@user_session) do |f| %>
				<h1>Login</h1>
                <% unless f.error_messages.empty? %>
				    <div class="error">
					    <p>Please input valid Email and Password !</p>
				    </div>
                <% end %>
				<!-- Add class="error-fieldset" to the fieldset tag in case there is an error, this class has to be added to any fieldset that has an error -->
				<fieldset>
					<label>Email</label>
                    <%= f.text_field :username, :class => "login-text" %>
					<!-- Message to be shown below the filed which has a problem
					<p>Improper email format</p>
					-->
				</fieldset>
				<fieldset>
					<label>Password</label>
					<%= f.password_field :password, :class => "login-text" %>
				</fieldset>
                <fieldset>
                    <%= link_to 'Login', "#", :id => "BtnFormSubmit" ,:class => "small blue gradient-button" -%>
                </fieldset>
				<p class="forgot-password">Did you <a href="#">forget your password?</a> or do you need to <%= link_to 'create an account.', register_url  -%></p>
            <% end %>
			</div>
		</div>
	</div>
